<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/layout_outer_margins">

    <EditText
        android:id="@+id/guestView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_outer_margins"
        android:inputType="textCapSentences"
        android:hint="@string/hint_add_element_guest"
        android:nextFocusDown="@id/descriptionView" />

    <EditText
        android:id="@+id/descriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_margin="@dimen/layout_outer_margins"
        android:imeOptions="actionDone"
        android:hint="@string/hint_add_element_description" />


</LinearLayout>